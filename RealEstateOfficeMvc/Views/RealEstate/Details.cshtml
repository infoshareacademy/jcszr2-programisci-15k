@model IEnumerable<RealEstateOfficeMvc.Domain.Image>

<style>
    table#estates {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        table#estates td, table#estates th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        table#estates tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table#estates {
            background-color: yellow;
        }

        table#estates th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: black;
            color: white;
        }

        table#estates tr:hover {
            background-color: #ddd;
        }
</style>



<table id="estates">
    <tr>
        <th>Typ nieruchomości</th>
        <th>Miasto</th>
        <th>Powierzchnia</th>
        <th>Cena</th>
        <th>Cena za metr2</th>
        <th>Data utworzenia</th>
    </tr>
    <tr>
        <td>@ViewData["typeOfRealEstate"]</td>
        <td>@ViewData["City"]</td>
        <td>@ViewData["Area"]</td>
        <td>@ViewData["Price"] pln</td>
        <td>@ViewData["Pricem2"]</td>
        <td>@ViewData["CreationDate"]</td>
    </tr>

</table>



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000">
   
    
        <div class="carousel-inner">
            @foreach (var img in Model)
            {
                <div class="carousel-item @(img == Model.First() ? "active" : "")">
                    <img class="d-block w-100" src="~/images/@img.RealEstateId/@img.Nazwapliku" alt="@img.Nazwapliku">
                </div>
            }
        
        </div>
       
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
        </a>
 </div>   
            
            



  




